@model IEnumerable<PracaInz.Models.Opinion>

@{
    ViewBag.Title = "Index";
}

<h2>Twoje opinie</h2>

<table class="table">
    <tr>
        <th>
            Model
        </th>
        <th>
            Opinia
        </th>
        <th>
            Ocena
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Car.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opinia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ocena)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
