@model IEnumerable<PracaInz.Models.Opinion>

@{
    ViewBag.Title = "Opinie";
}

<h2>Opinie</h2>

<p>
    @Html.ActionLink("Utwórz nową", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Wyszukaj model: @Html.TextBox("search")
        <input type="submit" value="Szukaj" />
    </p>
}
<table class="table">
    <tr>
        <th>
            Model
        </th>
        <th>
            Opinia
        </th>
        <th>
            Ocena
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Car.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opinia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ocena)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
